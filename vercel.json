{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/download/(.*)", "destination": "/public/download/$1" },
    { "source": "/tools/(.*)", "destination": "/public/tools/$1" },
    { "source": "/ai/(.*)", "destination": "/public/ai/$1" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ]
}
